<%= form_for(@product) do |f| %>
    <%= render 'shared/error_messages', object: @product %>

    <%= f.label :product_name %>
    <%= f.text_field :product_name, class: 'form-control' %>

    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>

    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>

    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: 'form-control' %>

    <%= f.label :price %>
    <%= f.number_field :price, class: :text_field, step: :any %>

    <%= f.label :exp_date %>
    <%= f.date_select :exp_date, class: 'form-control' %>


    <%= f.label :local %>
    <%= f.check_box :local, class: 'form-control' %>

    <%= f.label :category_id %>
    <%= f.collection_select :category_id, @categories, :id, :category_name, include_blank: true %>


    <%= f.submit "Sell a Product", class: "btn btn-primary" %>
<% end %>

<script type="text/javascript">
    $('#micropost_picture').bind('change', function() {
        var size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5) {
            alert('Maximum file size is 5MB. Please choose a smaller file.');
        }
    });
</script>