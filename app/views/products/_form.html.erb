<%= form_for(@product) do |f| %>
    <%= render 'shared/error_messages', object: @product %>

    <%= f.hidden_field :seller_id, :value => current_user.id %>
    <%= f.hidden_field :active, :value => true %>

    <%= f.label :product_name %>
    <%= f.text_field :product_name, class: 'form-control' %>

    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>

    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: 'form-control' %>

    <%= f.label :price %>
    <%= f.number_field :price, class: :text_field, step: :any %>

    <%= f.label :exp_date %>
    <%= f.date_select :exp_date, class: 'form-control' %>


    <%= f.label :local %>
    <%= f.check_box :local, class: 'form-control' %>

    <%= f.label :category_id %>
    <%= f.collection_select :category_id, @categories, :id, :category_name%>

    <%= f.submit "Sell a Product", class: "btn btn-primary" %>
<% end %>