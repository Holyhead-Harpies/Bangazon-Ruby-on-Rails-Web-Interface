<%= form_for(@payment_type) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<%= f.hidden_field :user_id, :value => current_user.id %>

    <%= f.label :account_name %>
  <%= f.select(:account_name) do %>
      <%=	 content_tag(:option, "Choose an Account Type", value: "") %>
      <% @payment_types.each do |c| %>
      <%= content_tag(:option, c) %>
      <% end %>
  <% end %>

<%= f.label :account_number %>
<%= f.text_field :account_number, class: 'form-control' %>

<%= f.label :exp_date %>
<%= f.date_select :exp_date, class: 'form-control' %>

<%= f.submit "Add Payment Type", class: "btn btn-primary" %>
<% end %>